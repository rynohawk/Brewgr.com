@using Brewgr.Web
@using Brewgr.Web.Core.Model

<header>
    <div class="container">
        <div class="row">
            <div class="col-xs-3 col-sm-3 col-md-3 col-lg-3">
                <a id="logo" href="@Url.Action("Index", "Root", null, "http")"><img src="@Url.Image("~/img/logo.png")" alt="Brewgr" /></a>
            </div>
            <div class="col-xs-9 col-sm-9 col-md-9 col-lg-9">
                <ul id="navigation" class="menu">
                    <li class="hidden-xs hidden-sm"><a href="@Url.Action("Index", "Root", null, "http")">Home</a></li>
                    <li>
                        <a href="@Url.Action("Recipes", "recipe", null, "http")">Recipes</a>
                        <ul>
                            <li><a href="@Url.Action("dashboard", "dashboard", null, "http")/#recipes">My Recipes</a></li>
                            <li><a href="@Url.Action("dashboard", "dashboard", null, "http")/#brewsessions">My Brew Sessions</a> </li>
                            <li><a href="@Url.Action("Recipes", "recipe", null, "http")"><span>Homebrew Recipe Catalog</span></a></li>
                            <li><a href="@Url.Action("NewRecipe", "recipe", null, Url.Https())">Create a New Recipe</a></li>
                            <li class="hidden-xs"><a href="#" class="recipe-import" rel="nofollow">Import Beer Xml</a></li>
                        </ul>
                    </li>
                    <li>
                        <a>Tools</a>
                        <ul>
                            <li><a href="@Url.Action("NewRecipe", "recipe", null, Url.Https())">Homebrew Recipe Calculator</a></li>
                            <li><a href="@Url.Action("CalculatorsHydrometerTemp", "Calculators", null, "http")">Hydrometer Correction Calculator</a></li>
                            <li><a href="@Url.Action("CalculatorsMashSpargeWater", "Calculators", null, "http")">Mash/Sparge Water Infusion Calculator</a></li>
                        </ul>
                    </li>
                    <li>
                        <a href="@Url.Action("about", "root")">About</a>
                        <ul>
                            <li><a href="@Url.Action("about", "root")">About Brewgr</a></li>
                            <li><a href="@Url.Action("howitworks", "root")">How It Works</a></li>
                            <li><a href="@Url.Action("features", "root")">Features</a></li>
                        </ul>
                    </li>
                    <li class="hidden-xs"><a href="http://brewgr.com/blog">Blog</a></li>
                    <li class="visible-xs">
                        @if (ViewBag.ActiveUser != null)
                        {
                            <a href="/logout">Sign Out</a>
                        }
                        else
                        {
                            <a href="/logout">Sign In</a>
                        }
                    </li>
                </ul>

                @* User Info *@
                <div class="hidden-xs">
                    @Html.Partial("_UserInfo")
                </div>

                @* Mobile Menu *@
                <div id="mobilemenu" class="visible-xs">
                    @if (ViewBag.ActiveUser != null)
                    {
                        <a href="@Url.UserProfileUrl((ViewBag.ActiveUser as UserSummary).Username)">
                            <img src="@((ViewBag.ActiveUser as UserSummary).GetAvatar(28))" class="avatar" />
                        </a>
                    }
                    <button class="btn btn-lg searchtrig">
                        <span class="glyphicon glyphicon-search"></span>
                    </button>
                    <button class="menu btn btn-lg">
                        <span class="glyphicon glyphicon-menu-hamburger"></span>
                    </button>
                </div>
            </div>
        </div>
    </div>
</header>